{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"],
      "@reduxjs/toolkit": ["./node_modules/@reduxjs/toolkit"],
      "react": ["./node_modules/@types/react"],
      "react/jsx-runtime": ["./node_modules/@types/react/jsx-runtime"],
      "react-dom": ["./node_modules/@types/react-dom"],
      "react-redux": ["./node_modules/react-redux"],
      "react-router-dom": ["./node_modules/react-router-dom"],
      "@neondatabase/serverless": ["./node_modules/@neondatabase/serverless"]
    }
  },
  "include": ["src", "scripts", "netlify", "../shared"],
  "exclude": ["../shared/store/hooks.ts"]
}
